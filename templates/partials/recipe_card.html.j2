{% macro create(title, slug) -%}
<a class="card-href" href="{{ url_for('render_recipe', recipe_slug=slug) }}">
  <div class="col-sm-3 recipe card">
    <div class="card-foreground">
      <h3>{{ title }}</h3>
    </div>
    <div class="card-background">
      <hr></hr>
    </div>
  </div>
</a>
{%- endmacro %}
